#!/bin/bash

. /opt/forklift/lib/forklift

# parse args and set values
for i in "${@}"; do

  case $i in
    archive=* )
      BUILD_ID=${i#*=}
      ;;
    previous=* )
      PREVIOUS_BUILD_ID=${i#*=}
      ;;
    token=* )
      WAREHOUSE_TOKEN=${i#*=}
      ;;
    host=* )
      WAREHOUSE_IP=${i#*=}
      ;;
  esac

done

if [[ -n ${PREVIOUS_BUILD_ID} ]]
then
  echo "Persisting final image..."
  extract_stdin
  echo "Extracting archive from previous push..."
  extract_archive
  create_ssh_key
  echo "Syncing image layers with previous image..."
  update_timestamps
  sync_image
  echo "Committing new archive from sync..."
  commit_archive
else
  echo "Compressing final image..."
  gzip_image
  echo "Uploading image..."
  upload_image
fi
